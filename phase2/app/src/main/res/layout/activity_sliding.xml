<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".games.slidinggame.activity.SlidingActivity"
    android:id="@+id/weaponPage"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="80sp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/catchBallLevel"
            android:layout_width="167dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="80dp"
            android:layout_marginEnd="52dp"
            android:layout_marginBottom="10dp"
            android:text=""
            android:textSize="28sp"
            app:layout_constraintEnd_toEndOf="@id/tvScore"
            app:layout_constraintStart_toStartOf="@id/text_death"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.375" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Score"
            android:textSize="26sp" />

        <TextView
            android:id="@+id/tvScore"
            android:layout_marginStart="80dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textSize="28sp"/>

        <Chronometer
            android:id="@+id/slidingTimer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60sp"
            android:layout_marginTop="40sp"
            android:format="USED TIME :  00:00"
            android:textSize="28sp"
            app:layout_constraintHorizontal_bias="0.056"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/text_death"
            android:layout_width="139dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="240dp"
            android:text="death:"
            android:textSize="26sp"
            app:layout_constraintTop_toTopOf="parent" />
    </RelativeLayout>

    <com.example.gamecenter.games.slidinggame.activity.SlidingGrid
        android:id="@+id/weaponView"
        android:layout_width="fill_parent"
        android:layout_height="500dp"
        android:layout_marginTop="80dp">


    </com.example.gamecenter.games.slidinggame.activity.SlidingGrid>

    <Button
        android:id="@+id/pause2048"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_marginTop="550dp"
        android:layout_marginStart="3dp"
        android:layout_marginBottom="0dp"
        android:background="#CDDC39"
        android:text="@string/pause"
        android:textSize="18sp" />

    <Button
        android:id="@+id/Save2048"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="105dp"
        android:layout_marginTop="550dp"
        android:background="#CDDC39"
        android:text="@string/save"
        android:textSize="18sp" />


    <Button
        android:id="@+id/Help2048"
        android:layout_width="wrap_content"
        android:layout_height="58dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="550dp"
        android:layout_toEndOf="@+id/Save2048"
        android:background="#CDDC39"
        android:text="@string/help"
        android:textSize="18sp" />

    <Button
        android:id="@+id/backtoMain"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="550dp"
        android:layout_toEndOf="@+id/Help2048"
        android:background="#CDDC39"
        android:text="@string/back"
        android:textSize="18sp" />



</RelativeLayout>