<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/math24introPage"

    tools:context=".games.math24game.activity.Math24IntroActivity">

    <Button
        android:id="@+id/btn_back2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="39dp"
        android:layout_marginBottom="34dp"
        android:backgroundTint="#E91E63"
        android:text="@string/back"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/math24intro"
        android:layout_width="350dp"
        android:layout_height="60dp"
        android:layout_marginTop="84dp"
        android:layout_marginEnd="31dp"
        android:background="#0003A9F4"
        android:text="Introduction of Math24"
        android:textAlignment="center"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/introBody"
        android:layout_width="298dp"
        android:layout_height="300dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="70dp"
        android:background="#0000D48A"
        android:text="The purpose of Math24 is to Use the 4 numbers gieven, combined with ), (, +, /, -, *, mathemtical operations to get 24. Each number must and can be only used once. You hava three chances\ for the question. The clear button can clear the letters you entered before you press the equal sign. After the game, press next to go to the next page."
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/math24intro" />
</androidx.constraintlayout.widget.ConstraintLayout>